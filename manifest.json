{
  "manifest_version": 2,
  "name": "arxiv2issue",
  "short_name": "arxiv2issue",
  "description": "",
  "version": "0.3",
  "background": { "scripts": ["background.js"] },
  "page_action": {
	  "default_icon": {
		  "16": "icon.png",
		  "24": "icon.png",
		  "32": "icon.png"
	  },
	  "default_title": "arxiv2issue",
	  "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
	  "storage",
	  "tabs",
	  "https://arxiv.org/"
  ]
}
