{
  "manifest_version": 2,
  "name": "arxiv2issue",
  "short_name": "arxiv2issue",
  "description": "",
  "version": "0.4.2",
  "background": { "scripts": ["background.js"] },
  "page_action": {
	  "default_icon": {
		  "16"  : "./icons/icon_16.png",
		  "24"  : "./icons/icon_24.png",
		  "32"  : "./icons/icon_32.png",
		  "48"  : "./icons/icon_48.png",
		  "128" : "./icons/icon_128.png"
	  },
	  "default_title": "arxiv2issue",
	  "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
	  "storage",
	  "tabs",
	  "https://arxiv.org/"
  ]
}
