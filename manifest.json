{
  "manifest_version": 2,
  "name": "arxiv2issue",
  "short_name": "arxiv2issue",
  "description": "Post a github issue of arxiv paper.",
  "version": "0.4.8",
  "background": {
      "scripts": ["jquery-3.4.1.min.js", "background.js"],
      "persistent": false
  },
  "page_action": {
	  "default_icon": {
		  "16"  : "icon_16.png",
		  "24"  : "icon_24.png",
		  "32"  : "icon_32.png",
		  "48"  : "icon_48.png",
		  "128" : "icon_128.png"
	  },
	  "default_title": "arxiv2issue",
	  "default_popup": "popup.html"
  },
  "icons": {
      "16"  : "icon_16.png",
      "24"  : "icon_24.png",
      "32"  : "icon_32.png",
      "48"  : "icon_48.png",
      "128" : "icon_128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
	  "storage",
	  "https://arxiv.org/",
      "https://api.github.com/"
  ]
}
